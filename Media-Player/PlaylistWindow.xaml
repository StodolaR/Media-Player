<Window x:Class="Media_Player.PlaylistWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Media_Player"
        mc:Ignorable="d"
        Title="PlaylistWindow" Height="450" Width="800">
    <Grid Margin="5">
        <Grid.Resources>
            <Style TargetType="ListBox">
                <Setter Property="Margin" Value="2"/>
                <Setter Property="Background">
                    <Setter.Value>
                        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                            <GradientStop Color="Black" Offset="0"/>
                            <GradientStop Color="Gray" Offset="1"/>
                        </LinearGradientBrush>
                    </Setter.Value>
                </Setter>
                <Setter Property="Foreground" Value="White"/>
            </Style>
        </Grid.Resources>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                <GradientStop Color="Black" Offset="0"/>
                <GradientStop Color="gray" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <DockPanel>
            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
                <TextBlock Text="PLAYLIST" FontSize="25" FontFamily="Wide Latin" Margin="20,5" Foreground="Gold"/>
                <TextBlock x:Name="tbPlaylistType" Foreground="Gold" FontSize="15" VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Top">
                <StackPanel Orientation="Horizontal" Width="250">
                    <Button x:Name="btnNew" Content="Nový" Click="BtnNew_Click"/>
                    <Button x:Name="btnRename" Content="Prejmenuj" Click="BtnRename_Click"/>
                    <Popup x:Name="popNewName" Placement="Bottom" PlacementTarget="{Binding ElementName=btnNew}">
                        <StackPanel>
                            <TextBlock Text="Zadej název playlistu:" Background="White"/>
                            <TextBox x:Name="tbNewName" Width="250"/>
                            <TextBlock x:Name="tbNameExist" Background="White" Text="Název již existuje, zvolte jiný" Visibility="Collapsed"/>
                            <StackPanel Orientation="Horizontal">
                                <Button x:Name="btnOk" Content="Potvrď" Click="BtnOk_Click" Width="125"/>
                                <Button x:Name="btnCancel" Content="Zruš" Click="BtnCancel_Click" Width="125"/>
                            </StackPanel>

                        </StackPanel>
                    </Popup>
                    <Button x:Name="btnRemove" Content="Smaž" Click="BtnRemove_Click"/>
                    <ToggleButton x:Name="btnPictures" Content="Audio/obrázky" Click="BtnPictures_Click"/>
                </StackPanel>
                <WrapPanel>
                    <Border CornerRadius="7,0,0,7" Height="20" Style="{StaticResource textboxBorder}">
                        <TextBlock Text="Spusť playlist: "/>
                    </Border>
                    <Button x:Name="btnFromBegin" Content="od začátku" Click="ChooseStartIndex"/>
                    <TextBlock Text="/" Foreground="White" FontSize="15"/>
                    <Button x:Name="btnFromSelect" Content="od výběru" Click="ChooseStartIndex"/>
                </WrapPanel>
            </StackPanel>
            <ListBox x:Name="lbPlaylists" DockPanel.Dock="Left" Width="250" ItemsSource="{Binding ActualPlaylists}" 
                     SelectedItem="{Binding SelectedPlaylist}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <StackPanel VerticalAlignment="Center" DockPanel.Dock="Right">
                <Button x:Name="btnUp" Content="Nahoru" Click="btnUp_Click"/>
                <Button x:Name="btnAddFolder" Content="Přidej složku" Click="BtnAddFolder_Click"/>
                <Button x:Name="btnAddFile" Content="Přidej soubor" Click="BtnAddFile_Click"/>
                <Button x:Name="btnRemovePath" Content="Smaž" Click="BtnRemovePath_Click"/>
                <Button x:Name="btnDown" Content="Dolu"  Click="BtnDown_Click"/>
                <Border Margin="5,20" CornerRadius="3" Style="{StaticResource textboxBorder}">
                    <StackPanel Margin="5">
                        <TextBlock Text="Položky"/>
                        <TextBlock Text="přidávat:"/>
                        <RadioButton x:Name="rbAddToEnd" Content="na konec" IsChecked="True"/>
                        <RadioButton Content="Před výběr"/>
                    </StackPanel>
                </Border>
            </StackPanel>
            <ListBox x:Name="lbFilenames" ItemsSource="{Binding SelectedPlaylist.Paths}"/>
        </DockPanel>
        
    </Grid>
</Window>
