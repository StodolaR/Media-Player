<Window x:Class="Media_Player.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Media_Player"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <MediaElement Name="mePlayer" LoadedBehavior="Manual" MediaEnded="MePlayer_MediaEnded"/>
        <DockPanel x:Name="dPPictures">
            <ListBox x:Name="lbPreviews" DockPanel.Dock="Right" Visibility="Collapsed" SelectionChanged="LbPreviews_SelectionChanged">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Image Source="{Binding}" Width="60" Margin="2" />
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <Image x:Name="imPicture"/>
        </DockPanel>
        <DockPanel x:Name="dpControlPanel" Height="78" Grid.Row="1" Margin="3">
            <DockPanel.Resources>
                <Style TargetType="Image">
                    <Setter Property="Width" Value="15"/>
                    <Setter Property="Margin" Value="2"/>
                </Style>
            </DockPanel.Resources>
            <DockPanel.Background>
                <LinearGradientBrush StartPoint="0.5 0" EndPoint="0.5 1">
                    <GradientStop Color="Gray" Offset="0"/>
                    <GradientStop Color="#606060" Offset="0.25"/>
                    <GradientStop Color="Black" Offset="0.3"/>
                    <GradientStop Color="#444444" Offset="0.35"/>
                    <GradientStop Color="#333333" Offset="0.55"/>
                    <GradientStop Color="LightGray" Offset="0.6"/>
                    <GradientStop Color="#2A2A2A" Offset="0.65"/>
                    <GradientStop Color="Black" Offset="1"/>
                </LinearGradientBrush>
            </DockPanel.Background>
            <Grid DockPanel.Dock="Left">
                <Grid.Background>
                    <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                        <GradientStop Color="Gray" Offset="0"/>
                        <GradientStop Color="Black" Offset="1"/>
                    </LinearGradientBrush>
                </Grid.Background>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="25"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="25"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="btnLast" Click="BtnLast_Click" Style="{StaticResource lastBtnStyle}" ToolTip="Předchozí položka">
                    <Image Source="/Resources/Images/Rew.png" Width="12"/>
                </Button>
                <ToggleButton x:Name="btnPause" Grid.Column="1" Width="35" IsEnabled="False" ToolTip="Pauza/spuštění" ToolTipService.ShowOnDisabled="True"
                              Checked="BtnPause_Checked" Unchecked="BtnPause_Unchecked" Style="{StaticResource pauseBtnStyle}">
                    <Image Source="/Resources/Images/Pause.png" Width="15" x:Name="imPauseContent"/>
                </ToggleButton>
                <Button x:Name="btnNext"  Grid.Column="2" Click="BtnNext_Click" Style="{StaticResource nextBtnStyle}" ToolTip="Následující položka">
                    <Image Source="/Resources/Images/Ff.png" Width="12"/>
                </Button>
            </Grid>
            <Slider x:Name="slProgress" DockPanel.Dock="Top" IsMoveToPointEnabled="True" Thumb.DragStarted="SlProgress_DragStarted" Margin="3,4" ToolTip="Průběh přehrávání" ToolTipService.ShowOnDisabled="True"
                    Thumb.DragCompleted="SlProgress_DragCompleted" ValueChanged="slProgress_ValueChanged" IsEnabled="False" Foreground="Red"/>
            <DockPanel x:Name="Controls" DockPanel.Dock="Bottom">
                <Button x:Name="btnHide" DockPanel.Dock="Right" Click="BtnHide_Click" ToolTip="Skrytí panelu">
                    <Image Source="/Resources/Images/Collapse.png"/>
                </Button>
                <Button x:Name="btnPlaylist" DockPanel.Dock="Right" Click="BtnPlaylist_Click" ToolTip="Nastavení playlistů">
                    <Image Source="/Resources/Images/Playlist.png"/>
                </Button>
                <Button x:Name="btnOpen" DockPanel.Dock="Right" Click="BtnOpen_Click" ToolTip="Otevření souboru">
                    <Image Source="/Resources/Images/Open.png"/>
                </Button>
                <RadioButton x:Name="btnVideo" DockPanel.Dock="Right" Margin="1,3,5,3" Click="BtnVideo_Click" ToolTip="Přepnutí do režimu video"
                             Style="{StaticResource RadioBtnStyle}" Width="35">
                    <RadioButton.Template>
                        <ControlTemplate TargetType="RadioButton">
                            <Border CornerRadius="0,7,7,0" Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </RadioButton.Template>
                    <Image Source="/Resources/Images/Video.png"/>
                </RadioButton>
                <RadioButton x:Name="btnAudio" Margin="5,3,1,3" DockPanel.Dock="Right" IsChecked="True" ToolTip="Přepnutí do režimu audio + obrázky"
                             Click="BtnAudio_Click" Style="{StaticResource RadioBtnStyle}">
                    <RadioButton.Template>
                        <ControlTemplate TargetType="RadioButton">
                            <Border CornerRadius="7,0,0,7" Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </RadioButton.Template>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Resources/Images/Audio.png"/>
                        <TextBlock Text="/"/>
                        <Image Source="/Resources/Images/Picture.png"/>
                    </StackPanel>
                </RadioButton>
                
                <Slider x:Name="slVolume" Width="70" DockPanel.Dock="Left" Maximum="1" Value="0.7" ValueChanged="SlVolume_ValueChanged"
                        Foreground="#6655DD" Margin="3,8" ToolTip="Hlasitost"/>
                <Image Source="/Resources/Images/VolumeWhite.png" DockPanel.Dock="Left" Height="15"/>
                <StackPanel x:Name="spSlideshow" Orientation="Horizontal" Visibility="Collapsed" HorizontalAlignment="Center" Height="22" Margin="2">
                    <Border CornerRadius="7,2,2,7">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Resources/Images/Picture.png" Height="14" ToolTip="Počet obrázků ve výběru"/>
                            <TextBlock x:Name="tbPicturesCount" VerticalAlignment="Center" ToolTip="Počet obrázků ve výběru"/>
                            <Image Source="/Resources/Images/Delay.png" Height="12" Margin="0" ToolTip="Zadání Časové prodlevy pro automatické procházení obrázků - Slideshow"/>
                            <TextBox x:Name="tbxDelay" Text="5" PreviewTextInput="TbxDelay_PreviewTextInput" Width="10" 
                                     GotKeyboardFocus="tbxDelay_GotKeyboardFocus" LostKeyboardFocus="tbxDelay_LostKeyboardFocus" ToolTip="Zadání Časové prodlevy pro automatické procházení obrázků - Slideshow"/>
                            <TextBlock Text="s" VerticalAlignment="Center" ToolTip="Zadání Časové prodlevy pro automatické procházení obrázků - Slideshow"/>
                        </StackPanel>
                    </Border>
                    <ToggleButton Background="DarkGoldenrod" x:Name="btnSlideshow" Click="BtnSlideshow_Click" Margin="2,0" ToolTip="Spuštění/ukončení automatického procházení obrázků - Slideshow">
                        <Image Source="/Resources/Images/Slideshow.png"/>
                    </ToggleButton>
                </StackPanel>
            </DockPanel>
            <Border x:Name="brdProgressTime" CornerRadius="0,0,10,10" DockPanel.Dock="Right" Width="100" Margin="0,3,5,5" ToolTip="Čas přehrávání/celkový čas">
                <TextBlock x:Name="tbProgressTime" Text="0:00:00/0:00:00" HorizontalAlignment="Center"/>
            </Border>
            <Border x:Name="brdFilename" CornerRadius="7" Margin="1,5" Width="300" ToolTip="Název přehrávaného souboru">
                <TextBlock x:Name="tbFilename" Text="Název souboru" HorizontalAlignment="Center"/>
            </Border>
        </DockPanel>
        <Button x:Name="btnShowPanel" HorizontalAlignment="Right" VerticalAlignment="Bottom" Click="BtnShowPanel_Click" Visibility="Collapsed" ToolTip="Zobrazení panelu">
            <Image Source="/Resources/Images/Maximize.png" Width="15" Margin="2"/>
        </Button>
    </Grid>
</Window>
